<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
    	    <css src="Clyde_Warranty::css/warranty.css" />
        	<css src="Clyde_Warranty::js/main.js" media="all" />
    </head>
    <body>
       	<referenceBlock name="footer_links">
			<block class="Magento\Framework\View\Element\Html\Link\Current" name="2custom-link">
				<arguments>
					<argument name="label" xsi:type="string">Warranties &amp; Garantees</argument>
					<argument name="path" xsi:type="string">warranties-and-guarantees</argument>
				</arguments>
			</block>
		</referenceBlock>
		<referenceContainer name="before.body.end">
		    <block class="Clyde\Warranty\Block\Dynamicsetting" name="dynamicsetting.components" as="dynamicsetting" template="Clyde_Warranty::setting/dynamic.phtml"/>
		</referenceContainer>
    </body>
</page>
